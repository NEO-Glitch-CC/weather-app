generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String      @id @default(cuid())
  firstName   String
  lastName    String
  email       String      @unique
  password    String
  city        String?
  country     String?
  latitude    Float?
  longitude   Float?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @default(now())
  weathers    Weather[]
}

model Weather {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  city          String
  country       String
  temperature   Float
  feelsLike     Float
  humidity      Int
  windSpeed     Float
  pressure      Int
  description   String
  icon          String
  latitude      Float
  longitude     Float
  sunrise       DateTime
  sunset        DateTime
  uvIndex       Int?
  savedAt       DateTime  @default(now())
}

model WeatherCache {
  id        String    @id @default(cuid())
  city      String    @unique
  data      String    // JSON stringified weather data
  updatedAt DateTime  @updatedAt
}